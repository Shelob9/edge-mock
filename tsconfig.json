{
  "compilerOptions": {
    "outDir": ".",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "types": ["@cloudflare/workers-types", "@types/jest", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
